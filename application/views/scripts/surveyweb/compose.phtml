              <h3>
                <i class="fa fa-hand-o-up"></i>
               Compose Survey
              </h3>

            </div> <!-- /.portlet-header -->

            <div class="portlet-content">

              <form role="form" method="POST" action="/surveyweb/compose">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Survey Title</label>
                    <textarea class="form-control" name="shortname" placeholder="Type survey title" rows="1"></textarea>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Survey code</label>
                    <textarea class="form-control" name="code" placeholder="survey1" rows="1"></textarea>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Survey Description</label>
                    <textarea class="form-control" name="description" placeholder="Short Description" rows="2"></textarea>
                  </div>
                  <div>                
                  <button type="submit" class="btn btn-success">Submit and add questions</button>
                  <!-- <button type="submit" class="btn btn-default">DRAFT</button> -->
                  </div>
                </form>
              

            </div> <!-- /.portlet-content -->

